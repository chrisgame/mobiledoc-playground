<div local-class="output-type-button-bar">
  <button local-class="output-type-button" onClick={{action (mut outputType) 'raw'}}>Raw</button>
  <button local-class="output-type-button" onClick={{action (mut outputType) 'rendered'}}>Rendered</button>
  <button local-class="output-type-button" onClick={{action (mut outputType) 'text'}}>Text</button>
</div>
<div local-class="output-contents">
  {{#if isOutputTypeRaw}}
    <pre local-class="raw-output">
{{as-json mobiledoc}}
    </pre>
  {{else if isOutputTypeRendered}}
    {{#if mobiledoc}}
      <div local-class="rendered-dom-output">
        {{render-mobiledoc
          mobiledoc=mobiledoc
          atomNames=atomNames}}
      </div>
    {{/if}}
  {{else if isOutputTypeText}}
    <pre local-class="rendered-text-output">
{{mobiledocInText}}
    </pre>
  {{/if}}
</div>
